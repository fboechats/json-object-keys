{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "rootDir": "src",
    "baseUrl": "src",
    "allowJs": true,
    "outDir": "build/esm",
    "declaration": true,
    "declarationDir": "build/types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build", "src/**/test.ts"]
}
